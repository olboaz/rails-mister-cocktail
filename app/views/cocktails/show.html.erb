<div class="container">
  <ul class="list-group">
    <h1><%= @cocktail.name %></h1>
    <% @cocktail.doses.each do |dose| %>
      <li class="list-group-item"><%= dose.ingredient.name %></li>
      <li class="list-group-item"><%= dose.description %></li>

       <%= link_to "Delete",
                  dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
    <% end %>
  </ul>
</div>
