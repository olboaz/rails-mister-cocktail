<nav class="navbar navbar-expand-lg" id="navbar_color">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
    <i class="fas fa-glass-martini-alt"></i>
    <%= link_to " ENJOY COCKTAIL", root_path, class: "navbar-brand fas fa-glass-martini-alt" %>
  </div>
  <%= link_to "Delete", cocktail_path(@cocktail), method: :delete,
              data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
</nav>

<div class="container">
  <div class="wrapper" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.4)),
         url('https://source.unsplash.com/1600x900/?cocktail-<%=@cocktail.name%>')">
    <h1><%= @cocktail.name %></h1>
  </div>
  <div class="card-ingredients">
    <h4>List Ingredients</h4>
    <div class="card-infos">
      <ul class="list-unstyled">
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.ingredient.name %> - <%= dose.description %> -
              <%= link_to "", dose_path(dose), method: :delete,
              data: { confirm: "Are you sure?" }, class: "fas fa-trash" %></li>
        <% end %>
      </ul>
    </div>
    <%= link_to "Add Ingredients", new_cocktail_dose_path(@cocktail), class: "btn btn-secondary"%>
  </div>
  <br>
  <%= link_to "Back to List", cocktails_path, class: "btn btn-light btn-sm"%>
</div>
